{
    "manifest_version": 1,
    "type": "WebApp",
    "meta": {
        "name": "Sample App",
        "author": "Overwolf",
        "version": "0.0.9",
        "minimum-overwolf-version": "0.92.300.0",
        "description": "A Riven trading App",
        "dock_button_title": "Riven.market",
        "icon": "img/favicon.png",
        "icon_gray": "img/favicon.png",
        "launcher_icon": "img/favicon.png",
        "splash_image": "img/header.png",
        "window_icon": "img/rm_icon_512t.png"
    },
    "permissions": [
        "Hotkeys",
        "GameInfo"
    ],
    "data": {
        "game_targeting": {
            "type": "dedicated",
            "game_ids": [
                8954
            ]
        },
        "start_window": "index",
        "windows": {
            "index": {
                "file": "dist/windows/index.html",
                "desktop_only": true,
                "native_window": true,
                "resizable": true,
                "transparent": true,
                "size": {
                    "width": 1212,
                    "height": 699
                },
                "min_size": {
                    "width": 1212,
                    "height": 699
                }
            },
            "background": {
                "file": "dist/windows/background.html",
                "desktop_only": true,
                "native_window": true,
                "size": {
                    "width": 1212,
                    "height": 699
                },
                "min_size": {
                    "width": 1212,
                    "height": 699
                }
            },
            "in_game": {
                "file": "dist/windows/in_game.html",
                "in_game_only": true,
                "resizable": false,
                "transparent": true,
            }
        },
        "game_events": [8954],
        "launch_events": [{
            "event": "GameLaunch",
            "event_data": {
                "game_ids": [
                    8954
                ]
            },
            "start_minimized": false
        }],
        "force_browser": "user",
        "developer": {
            "enable_auto_refresh": true,
            "reload_delay": 1000,
            "filter": "*.*"
        }
    }
}